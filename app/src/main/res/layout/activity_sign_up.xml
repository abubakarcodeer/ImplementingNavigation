<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingHorizontal="20dp"
    tools:context=".ActivitySignUp">

    <TextView
        android:id="@+id/tvhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:text="Creat an\naccount"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/tvhead"
        android:background="@drawable/filedbackground"
        android:drawableStart="@drawable/baseline_account_circle_24"
        android:drawablePadding="5dp"
        android:hint="Username or Email"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_username"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/filedbackground"
        android:drawableStart="@drawable/baseline_compass_calibration_24"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/signup_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_password"
        android:layout_marginTop="20dp"
        android:background="@drawable/filedbackground"
        android:drawableStart="@drawable/baseline_compass_calibration_24"
        android:drawablePadding="5dp"
        android:hint="Confirm Password"
        android:textColor="@color/white"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvalert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_confirmpassword"
        android:layout_marginTop="10dp"
        android:text="By clicking the Register button , you agree to\nthe publish offer." />

    <RelativeLayout
        android:id="@+id/rlayoutbtn"
        android:layout_below="@id/tvalert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/signinbutton"
            android:drawableStart="@drawable/baseline_arrow_forward_24"
            android:padding="15dp" />
    </RelativeLayout>
    <TextView
        android:layout_below="@id/rlayoutbtn"
        android:id="@+id/signup_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Sign up with" />

    <LinearLayout
        android:id="@+id/llicons"
        android:layout_below="@id/signup_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/img_1" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/img_2" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/img_3" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/llicons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If You Have a Account?" />

        <TextView
           android:id="@+id/btnsignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginLeft="5dp"
            android:textColor="#D31919"/>
    </LinearLayout>
</RelativeLayout>